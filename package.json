{
  "name": "rollup-typescript-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "typings": "dist/types/index.d.ts",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "lint": "tslint src/**/*.{ts,tsx} ",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "test": "jest",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c",
    "build": "npm run build:types && npm run build:js",
    "release:commit": "cross-var git commit -am \"v\"$npm_package_version",
    "release:tag": "cross-var git tag \"v\"$npm_package_version -m \"build: release \"$npm_package_version",
    "release": "npm run release:commit && npm run release:tag && git push --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "tslint",
      "git add"
    ]
  },
  "keywords": [],
  "author": "xg4 <xingor4@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "cross-var": "^1.1.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "rollup": "^1.9.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.2",
    "rollup-plugin-terser": "^4.0.4",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xg4/rollup-typescript-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/xg4/rollup-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/xg4/rollup-typescript-boilerplate#readme",
  "publishConfig": {
    "access": "public"
  }
}
